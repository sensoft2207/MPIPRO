<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/color_card_background"
    android:elevation="5dp">

    <LinearLayout
        android:id="@+id/ll_row_resource_journal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">

            <com.mxi.myinnerpharmacy.font.BoldMyTextView
                android:id="@+id/tv_title_raw_resource_journal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="The resource journal"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_audio_row_resource_journal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/sound_icon"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <com.mxi.myinnerpharmacy.font.RegularMyTextView
            android:id="@+id/tv_description_raw_resource_journal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="left"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:text="Hello there it is the screen of the resource journal Hello there it is the screen of the resource journal Hello there it is the screen of the resource journal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>
