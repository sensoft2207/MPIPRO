<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/breath_timer_bg"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_start_breath"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/breath_timer"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="vertical">

                   <com.mxi.myinnerpharmacy.font.BoldMyTextView
                       android:id="@+id/tv_timer"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Click here to start"
                       android:gravity="center"
                       android:textColor="@color/color_white"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:gravity="center|top"
                android:paddingTop="30dp"
                android:orientation="vertical">

                <com.mxi.myinnerpharmacy.font.RegularMyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breathing analysis"
                    android:gravity="center"
                    android:textSize="23sp"
                    android:textColor="@color/color_white"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|top">

                    <LinearLayout
                        android:id="@+id/ln_pause_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:elevation="20dp"
                        android:background="@drawable/white_circle">

                        <com.mxi.myinnerpharmacy.font.RegularMyTextView
                            android:id="@+id/tv_pause"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Pause"
                            android:textColor="@color/color_black"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|top">

                    <LinearLayout
                        android:id="@+id/ln_done_btn"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:elevation="20dp"
                        android:background="@drawable/green_circle">

                        <com.mxi.myinnerpharmacy.font.RegularMyTextView
                            android:id="@+id/tv_ratedone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Done"
                            android:textColor="@color/color_white"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </FrameLayout>


</LinearLayout>
