<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mxi.myinnerpharmacy.font.RegularMyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Playlist name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_black" />

        <com.mxi.myinnerpharmacy.font.RegularMyTextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Please inpute Playlist name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/add_uplifting"
            android:gravity="center">

            <com.mxi.myinnerpharmacy.font.RegularMyEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:ems="10"
                android:hint="Enter playlist name"
                android:inputType="textCapWords|textPersonName"
                android:padding="8dp"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/color_black"
            android:orientation="horizontal">


            <com.mxi.myinnerpharmacy.font.RegularMyTextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/color_black" />

            <com.mxi.myinnerpharmacy.font.RegularMyTextView
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:gravity="center"
                android:text="OK"
                android:textColor="@color/color_black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
